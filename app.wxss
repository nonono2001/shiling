@import "src/wetoast.wxss";
/**app.wxss**/
.container {
  height: 100%;
  width:100%;
  display: flex;  
} 
.bg{
  width:100%;
  height:100%;
  position:fixed;
  display: block;
}
.box{
  padding:1.2%;
  width:75%;
  background-color:#262142;
  border:1rpx solid #cea869;
  border-radius:30rpx;
  margin:0 auto;
}
  .box .box_form{
    background-color:#262142;
   
    padding:18rpx;
    background:url('../../images/bg_border.png') no-repeat center center/100% 100%;
 
  }
  .box .img_box{
    float: left;
  }
  .box .box_logo{
    width:65rpx;
    float: left;
    height:65rpx;
  }
  .box .box_top{
    color:#cea869;
    padding-bottom:15rpx;
  }
    .box .box_top .title{
      padding-top:25rpx;
      text-align: center;
      margin-right:70rpx;
      font-size:34rpx;
      font-family: sh;
    }
  .box .form_con{
    clear:both;
    padding-right:16rpx;
    padding-bottom:30rpx;
  }
    .box .inputs_box{
       padding-bottom:30rpx;
    }
      .box .form_con .input_box{
        overflow:hidden;
        clear:both;
      }
      .box .form_con .input_box input{
          background: #fff;
          border-radius: 10rpx;
          height:46rpx;
          margin-bottom:37rpx;
          padding-left:15rpx;
        }
      .box .form_con .input_text{
        color: #cea869;
        font-size:32rpx;
        width:160rpx;
        text-align: center;
        line-height: 46rpx;
        float: left;
      }
    .box .form_con button{
      color:#cea869;
      background-color: #0b1341;
      text-align: center;
      display: block;
      width: 165rpx;
      line-height: 48rpx;
      border: 1px solid #856e56;
      border-radius: 20rpx;
      font-size:26rpx;
    }
